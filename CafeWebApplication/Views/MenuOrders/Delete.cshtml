@model CafeWebApplication.MenuOrder

@{
    ViewData["Title"] = "Delete";
}

<h3>Ви впевнені, що хочете видалити замовлення з меню?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MenuItem.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> <br />
    </form>
</div>
<div>
    <a asp-action="Index" asp-route-id="@Model?.OrderId">Назад</a>
</div>
