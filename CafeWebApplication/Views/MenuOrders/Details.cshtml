@model CafeWebApplication.MenuOrder

@{
    ViewData["Title"] = "Details";
}

<h3>Деталі про замовлення з меню</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MenuItem.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Id)
        </dd>
    </dl>
</div>

@if (User.Identity.IsAuthenticated && User.IsInRole("user"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Змінити</a> |
        <a asp-action="Index" asp-route-id="@Model?.OrderId">Назад</a>
    </div>
}
else
{
    <div>
       <a asp-action="Index" asp-route-id="@Model?.OrderId">Назад</a>
    </div>
}
