@using Microsoft.AspNetCore.Identity
@model CafeWebApplication.ViewModel.ChangeRoleViewModel

<h2>Зміна ролі для користувача @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach(IdentityRole role in Model.AllRoles)
        {
            <input type="radio" name="roles" value="@role.Name"
                    @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") /><br />@role.Name <br />
        }
    </div><br />
    <button type="submit" class="btn btn-primary">Зберегти</button><br />
    <a asp-action="UserList">Назад</a>
</form>

