@model CafeWebApplication.Order

@{
    ViewData["Title"] = "Details";
}

<h3>Деталі про замовлення</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Table)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Table.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Waiter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Waiter.Name)
        </dd>
    </dl>
</div>

@if (User.Identity.IsAuthenticated && User.IsInRole("user"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Змінити</a> <br />
        <a asp-action="Index">Назад</a>
    </div>
}
else
{
    <div>
        <a asp-action="Index">Назад</a>
    </div>
}
