@model CafeWebApplication.Order

@{
    ViewData["Title"] = "Delete";
}

<h3>Ви впевнені, що хочете видалити замовлення?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Table)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Table.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Waiter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Waiter.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> <br />
        <a asp-action="Index">Назад</a>
    </form>
</div>
